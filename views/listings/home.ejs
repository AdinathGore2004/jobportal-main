<% layout('layout/boilerplate') %>

<!-- Hero Section -->
<section class="hero" style="
    background: url('https://img.freepik.com/free-vector/abstract-blue-light-pipe-speed-zoom-black-background-technology_1142-8392.jpg') no-repeat center center;
    background-size: cover;
    color: white;
    padding: 100px 0;
    text-shadow: 2px 2px 4px rgba(31, 31, 31, 0.7);
">
    <div class="container text-center">
        <h1 class="animate__animated animate__fadeInDown">Find Your <span class="highlight">Dream Job</span></h1>
        <p class="lead">Connecting the best talents with top companies worldwide.</p>
        <a href="/jobs" class="btn glass-btn">Explore Jobs</a>
    </div>
</section>

<!-- About Section -->
<section class="about-section mt-5">
    <div class="row align-items-center">
        <div class="col-md-6">
            <h2>Why Choose JobElite?</h2>
            <p>We provide job seekers with real-time job alerts.</p>
            <a href="/jobs" class="btn btn-primary btn-lg">Get Started</a>
        </div>
        <div class="col-md-6 text-center">
            <img src="https://i.pinimg.com/736x/50/9c/57/509c570fe6aee95ec1dfc84b5825b592.jpg" alt="Job Portal" class="img-fluid rounded shadow-lg">
        </div>
    </div>
</section>

<!-- Features -->
<section class="features mt-5">
    <div class="container">
        <h2 class="text-center">Our Key Features</h2>
        <div class="row mt-4">
            <div class="col-md-4 text-center">
                <i class="fas fa-rocket feature-icon"></i>
                <h4>Fast Hiring Process</h4>
                <p>Get Direct Apply link with Job Description.</p>
            </div>
            <div class="col-md-4 text-center">
                <i class="fas fa-users feature-icon"></i>
                <h4>Top Employers</h4>
                <p>Connect with the world's best companies hiring right now.</p>
            </div>
            <div class="col-md-4 text-center">
                <i class="fas fa-check-circle feature-icon"></i>
                <h4>Verified Listings</h4>
                <p>All job postings are carefully reviewed and verified.</p>
            </div>
        </div>
    </div>
</section>

<!-- Additional Image Section -->
<section class="extra-image mt-5 text-center">
    <img src="https://static.vecteezy.com/system/resources/previews/010/075/448/non_2x/businessman-hand-use-computer-laptop-to-find-jobs-searching-for-job-with-minimalist-and-elegant-design-vector.jpg" alt="AI Job Portal" class="img-fluid rounded shadow-lg">
</section>
